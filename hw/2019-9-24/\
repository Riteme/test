#include <cstdio>
#include <cstring>

#include <deque>
#include <algorithm>

using namespace std;

#define NMAX 1000

typedef long long i64;

static int n, seq[NMAX + 10];
static deque<i64> q;
static int cnt, op[NMAX + 10];

inline void take(int i) {
    op[cnt++] = i;
}

int main() {
    scanf("%d", &n);
    for (int i = 0; i < n; i++) {
        scanf("%d", seq + i);
        q.push_back(seq[i]);
    }
    while (!q.empty() && q[0] <= 0) {
        take(1);
        q.pop_front();
    }
    while (!q.empty() && q.back() <= 0) {
        take(q.size());
        q.pop_back();
    }

    if (q.empty()) {
        int vi = max_element(seq + 1, seq + n + 1) - seq;
        printf("%d\n%d\n", seq[vi], n - 1);
        for (int i = n; i > vi; i--)
            printf("%d\n", i);
        for (int i = 1; i < vi; i++)
            puts("1");
        return 0;
    }

    if (q.size() == 2) {
        if (q[0] > q[1]) {
            take(2);
        }
    }

    return 0;
}
